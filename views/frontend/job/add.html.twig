{% extends 'frontend/page-layout.html.twig' %}
{% block sub_css_block %}
<link rel="stylesheet" type="text/css" href="/assets/css/base.css">
<link rel="stylesheet" type="text/css" href="/assets/css/job/job.css">
{% endblock %}

{% block sub_js_block %}
<script type="text/javascript" src="/assets/js/job/new.js"></script>
{% endblock %}

{% block content %}
<div class="container main-container">
	<form id="post-form" action="/job/add" method="post">
		<div class="row form-title"><span class="title">发布职位</span></div>
		{% if company is not empty %}
		<div class="form-group row">
			<div class="col-xs-12">
				<input type="hidden" name="company_id" value="{{company.id}}">
				{# /company/index #}
				<a href="javascript:;" class="form-control" style="text-align: right;">{{company.short_name}}|{{company.industry}} ></a>
			</div>
		</div>
		{% else %}
		<div class="form-group row">
			<input class="form-control col-xs-12" type="text" name="full_name" placeholder="请输入公司全称" />
		</div>
		<div class="form-group row">
			<input class="form-control col-xs-12" type="text" name="short_name" placeholder="请输入公司简称" />
		</div>
		<div class="form-group row">
			<input class="form-control col-xs-12" type="text" name="industry" placeholder="请输入所属行业" />
		</div>
		<div class="form-group row">
			<input class="form-control col-xs-12" type="text" name="scale" placeholder="请选择人员规模" />
		</div>
		<div class="form-group row">
			<input class="form-control col-xs-12" type="text" name="fund" placeholder="请选择融资阶段" />
		</div>
		<!--<div class="form-group row">
			<div class="col-xs-4 col-form-label">公司Logo</div>
			<div class="col-xs-8">
				<input class="form-control" type="text" name="company_logo" placeholder="公司Logo" />
			</div>
		</div>-->
		<div class="form-group row">
			<input class="form-control col-xs-12" type="text" name="website" placeholder="请输入公司官网" />
		</div>
		{% endif %}
		<div class="row spacer"></div>
		<div class="form-group row">
			<select class="form-control col-xs-12" name="job_type" data-title="请选择职位类型">
				<optgroup label="技术">
					<option value="后端开发">后端开发</option>	
					<option value="前端开发">前端开发</option>
					<option value="测试">测试</option>
					<option value="运维">运维</option>
					<option value="移动开发">移动开发</option>
				</optgroup>
				<optgroup label="产品">
					<option value="产品经理">产品经理</option>
					<option value="产品设计师">产品设计师</option>
					<option value="产品总监">产品总监</option>
				</optgroup>
				<optgroup label="运营">
					<option value="运营">运营</option>
					<option value="编辑">编辑</option>
					<option value="客服">客服</option>
				</optgroup>
			</select>
		</div>
		<div class="form-group row">
			<input type="text" class="form-control col-xs-12" name="title" placeholder="请输入职位名称" />
		</div>
		{# <div class="form-group row">
			<input class="form-control" type="text" name="skills" placeholder="请输入技能要求，每项之间以空格分隔" />
		</div> #}
		<div class="form-group row">
			<div class="col-xs-12">
				<select class="form-control col-xs-5" id="pay_range_from" name="pay_range_from" style="padding-left: 2px;">
					{%for i in range(1, 50) %}
					<option value="{{i}}">{{i}}k</option>
					{% endfor %}
				</select>
				<span class="col-xs-2">~</span>
				<select class="form-control col-xs-5" id="pay_range_to" name="pay_range_to">
					{%for i in range(1, 50) %}
					<option value="{{i}}">{{i}}k</option>
					{% endfor %}
				</select>
			</div>
		</div>
		<div class="row spacer"></div>
		<div class="form-group row">
			<select class="form-control col-xs-12" name="exp_level" placeholder="请选择经验要求">
				<option value="不限">经验不限</option>
				<option value="应届生">应届生</option>
				<option value="1年以内">1年以内</option>
				<option value="1-3年">1-3年</option>
				<option value="3-5年">3-5年</option>
				<option value="5-10年">5-10年</option>
				<option value="10年以上">10年以上</option>
			</select>
		</div>
		<div class="form-group row">
			<select class="form-control col-xs-12 js-post-cert" name="edu_level" placeholder="请选择学历要求">
				<option value="不限">学历不限</option>
				<option value="高中">高中</option>
				<option value="专科">专科</option>
				<option value="本科">本科</option>
				<option value="硕士">硕士</option>
				<option value="博士">博士</option>
			</select>
		</div>
		<div class="row spacer"></div>
		<div class="form-group row">
			<select class="form-control col-xs-12 js-post-city" name="addr_city" placeholder="工作城市" data-style="data-link">
				<optgroup label="北京">
					<option value="北京">北京</option>
				</optgroup>
				<optgroup label="上海">
					<option value="上海">上海</option>
				</optgroup>
				<optgroup label="浙江">
					<option value="杭州">杭州</option>
					<option value="宁波">宁波</option>
				</optgroup>
				<optgroup label="广东">
					<option value="广州">广州</option>
					<option value="深圳">深圳</option>
				</optgroup>
			</select>
		</div>
		<div class="form-group row">
			<input type="text" class="form-control col-xs-12" name="address" placeholder="请输入工作地点" />
		</div>
		<div class="form-group row">
			<textarea rows="10" class="form-control col-xs-12" name="summary" placeholder="填写详细，清晰的职位描述有助于您更精确的展开招聘需求
例如：
1.工作内容...
2.任务要求...
3.特殊说明..." ></textarea>
		</div>
		<div class="row bottom-spacer"></div>
		<div class="bottom-menu">
			<button type="button" class="btn btn-mini btn-primary col-12 js-btn-edit">发布</button>
		</div>
	</form>
</div>
{% endblock %}